<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".busquedausuario.buFragment"
    android:background="@drawable/fondoplantilla">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Editar Usuario"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iVFotoProductoED"
                android:layout_width="218dp"
                android:layout_height="333dp"
                android:layout_gravity="center"
                android:src="@drawable/logofinal" />

            <TextView
                android:id="@+id/usuarionom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="    "


                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="171dp"
                    android:layout_height="match_parent"
                    android:enabled="true"
                    android:textColor="@color/ic_ittol_background"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/IDbusqueda"
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/ic_ittol_background"
                        android:textColorHint="#FFFFFF"
                        android:visibility="visible" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnBuscausu"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@drawable/buttonbuscar"
                    android:translationX="-15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnadmin"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@drawable/buttonasignarneon" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnusuarionormal"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:src="@drawable/buttondesinareon" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>